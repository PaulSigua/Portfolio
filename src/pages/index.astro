---
import Experience from "../components/Experience.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <main class="bg-app text-app relative">
    <Header />
    <section
      id="hero"
      class="relative mx-auto w-full max-w-6xl px-6
             min-h-[100dvh] grid items-center"
    >
      <Hero />
    </section>

    <section id="experience" class="relative mx-auto w-full max-w-6xl px-6
             min-h-[100dvh] grid items-center">
      <Experience />
    </section>
    
    <!-- <section id="projects" class="relative mx-auto w-full max-w-6xl px-6 py-16">
      <Projects />
    </section> -->
  </main>
</Layout>