---
import Linkedin from "./icons/Linkedin.astro";
import Github from "./icons/Github.astro";
import Mail from "./icons/Mail.astro";
import { useTranslations } from "../i18n/utils";

interface Props {
  lang?: "en" | "es" | "ja";
}

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);

const SOCIALS = [
  {
    href: "https://www.linkedin.com/in/paulsigua/",
    icon: Linkedin,
    label: "LinkedIn",
  },
  {
    href: "https://github.com/PaulSigua",
    icon: Github,
    label: "GitHub",
  },
  {
    href: "mailto:mateosigua2002@gmail.com",
    icon: Mail,
    label: "Email",
  },
];
---

<div
  class="flex flex-col-reverse lg:grid lg:grid-cols-10 gap-8 w-full justify-center items-center py-12"
>
  <div class="lg:col-span-7 space-y-6 text-center lg:text-left">
    <div class="flex justify-center lg:justify-start">
      <span
        class="inline-flex items-center gap-2 py-1.5 px-3 rounded-full text-xs font-medium
                   bg-badge border border-app-soft text-muted shadow-sm hover:shadow-md transition-shadow"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
          ></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
          ></span>
        </span>
        {t("hero.available")}
      </span>
    </div>

    <h1 class="text-4xl lg:text-5xl font-extrabold tracking-tight text-app">
      {t("hero.greeting")}
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--primary)] to-[var(--primary-active)]"
      >
        Pa√∫l Sigua
      </span>
    </h1>

    <div
      class="space-y-4 text-lg text-muted leading-relaxed max-w-2xl mx-auto lg:mx-0"
    >
      <p set:html={t("hero.intro")} />

      <p>
        {t("hero.passion")}
        <br />
        <span class="block mt-2 font-bold text-strong text-xl">
          {t("hero.cta")}
        </span>
      </p>
    </div>

    <div
      class="flex items-center justify-center lg:justify-start gap-2 text-sm text-subtle font-medium"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="size-4"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path
          d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"
        ></path></svg
      >
      {t("hero.location")}
    </div>

    <div class="flex gap-4 pt-4 justify-center lg:justify-start">
      {
        SOCIALS.map(({ href, icon: Icon, label }) => (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={label}
            class="
            flex items-center justify-center p-3 rounded-xl 
            bg-badge border border-app-soft text-muted
            transition-all duration-300 ease-in-out
            hover:scale-110 hover:-translate-y-1 
            hover:border-[var(--text-strong)] hover:text-[var(--text-strong)] hover:bg-[var(--surface-1)]
            shadow-sm hover:shadow-[var(--shadow)]
          "
          >
            <Icon class="size-6" />
          </a>
        ))
      }
    </div>
  </div>

  <div class="lg:col-span-3 flex justify-center items-center relative">
    <div
      class="absolute inset-0 bg-gradient-to-tr from-[var(--primary)] to-[var(--text-strong)] blur-[90px] opacity-20 rounded-full"
    >
    </div>

    <div
      class="relative w-48 h-48 md:w-64 md:h-64 lg:w-80 lg:h-80 aspect-square"
    >
      <img
        src="https://avatars.githubusercontent.com/u/109354319?v=4"
        alt={t("hero.avatar")}
        class="w-full h-full object-cover rounded-full border-4 border-app-soft shadow-[var(--shadow)] rotate-3 hover:rotate-0 transition-transform duration-500"
      />
    </div>
  </div>
</div>
