<header class="flex justify-center items-center" > 
  <nav class="fixed right-6 top-1/2 -translate-y-1/2 grid gap-4 justify-items-center text-app z-10">
  <a href="/about" aria-label="Experiencia"
      class="group relative flex items-center justify-center px-3 py-1 rounded-xl overflow-hidden w-25 h-10">
      
      <svg class="w-5 h-5 stroke-current text-green-500 transition-opacity duration-200 group-hover:opacity-20 absolute inset-0 m-auto"
          viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M3 7h18v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
        <path d="M8 7V5a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
        <path d="M12 12v1"/>
        <path d="M3 11h18"/>
      </svg>

      <span class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-200 group-hover:opacity-100 text-muted">
        Experiencia
      </span>

      <span class="pointer-events-none absolute inset-0 rounded-xl opacity-0 scale-90 transition-all duration-200 group-hover:opacity-100 group-hover:scale-110"
            style="background: radial-gradient(circle, rgba(34,197,94,0.15) 0%, rgba(22,163,74,0.08) 50%, rgba(21,128,61,0) 100%)"></span>
    </a>

    <a href="/projects" aria-label="Proyectos"
      class="group relative flex items-center justify-center px-3 py-1 rounded-xl overflow-hidden w-25 h-10">
      <svg class="w-5 h-5 stroke-current text-blue-500 transition-opacity duration-200 group-hover:opacity-20 absolute inset-0 m-auto"
          viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M3 7h5l2 2h11v8a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
        <path d="M3 7v10"/>
      </svg>
      <span class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-200 group-hover:opacity-100 text-muted">
        Proyectos
      </span>
      <span class="pointer-events-none absolute inset-0 rounded-xl opacity-0 scale-90 transition-all duration-200 group-hover:opacity-100 group-hover:scale-110"
            style="background: radial-gradient(circle, rgba(59,130,246,0.15) 0%, rgba(37,99,235,0.08) 50%, rgba(29,78,216,0) 100%)"></span>
    </a>

    <a href="/contact" aria-label="Contacto"
      class="group relative flex items-center justify-center px-3 py-1 rounded-xl overflow-hidden w-25 h-10">
      <svg class="w-5 h-5 stroke-current text-red-500 transition-opacity duration-200 group-hover:opacity-20 absolute inset-0 m-auto"
          viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2z"/>
        <path d="m22 6-10 7L2 6"/>
      </svg>
      <span class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-200 group-hover:opacity-100 text-muted">
        Contacto
      </span>
      <span class="pointer-events-none absolute inset-0 rounded-xl opacity-0 scale-90 transition-all duration-200 group-hover:opacity-100 group-hover:scale-110"
            style="background: radial-gradient(circle, rgba(239,68,68,0.15) 0%, rgba(220,38,38,0.08) 50%, rgba(185,28,28,0) 100%)"></span>
    </a>

    <button
      onclick="toggleTheme()"
      class="relative h-8 w-14 rounded-full transition-colors duration-300 bg-surface-2 border border-app-soft focus:outline-none"
      aria-label="Cambiar tema"
      aria-pressed="false"
    >
      <span
        id="theme-toggle-thumb"
        class="flex aspect-square h-6 w-6 items-center justify-center rounded-full bg-surface-1 text-app shadow-md transition-transform duration-300 translate-x-1 cursor-pointer"
      >
        <svg id="icon-sun" class="w-4 h-4 stroke-current hidden" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="4"></circle>
          <path d="M12 2v2"></path>
          <path d="M12 20v2"></path>
          <path d="M4.93 4.93l1.41 1.41"></path>
          <path d="M17.66 17.66l1.41 1.41"></path>
          <path d="M2 12h2"></path>
          <path d="M20 12h2"></path>
          <path d="M6.34 17.66l-1.41 1.41"></path>
          <path d="M19.07 4.93l-1.41 1.41"></path>
        </svg>
        <svg id="icon-moon" class="w-4 h-4 stroke-current" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </span>
    </button>
  </nav>
</header>
