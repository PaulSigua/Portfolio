---
const { color = 'gray' } = Astro.props as { color?: 'green' | 'red' | 'yellow' | 'orange' | 'purple' | 'gray' };

const colorClasses: Record<'green' | 'red' | 'yellow' | 'orange' | 'purple' | 'gray' | 'blue' | 'slate' | 'sky' | 'black', string> = {
  green: 'bg-green-100 text-green-800 border-green-400 bg-badge dark:text-green-400',
  red: 'bg-red-100 text-red-800 border-red-400 bg-badge dark:text-red-400',
  yellow: 'bg-yellow-100 text-yellow-800 border-yellow-400 bg-badge dark:text-yellow-400',
  orange: 'bg-orange-100 text-orange-800 border-orange-400 bg-badge dark:text-orange-400',
  purple: 'bg-purple-100 text-purple-800 border-purple-400 bg-badge dark:text-purple-400',
  gray: 'bg-gray-100 text-gray-800 border-gray-400 bg-badge dark:text-gray-400',
  blue: 'bg-blue-100 text-blue-800 border-blue-400 bg-badge dark:text-blue-400',
  slate: 'bg-slate-100 text-slate-800 border-slate-400 bg-badge dark:text-slate-400',
  sky: 'bg-sky-100 text-sky-800 border-sky-400 bg-badge dark:text-sky-400',
  black: 'bg-black text-app border-gray-600 bg-badge dark:text-gray-200',
};

const badgeClass = colorClasses[color];
---

<span class={`text-xs font-medium me-2 px-2.5 py-0.5 rounded-sm border border-app-soft ${badgeClass}`}>
  <slot />
</span>