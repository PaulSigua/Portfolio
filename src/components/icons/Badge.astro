---
const { color = 'gray' } = Astro.props as { color?: 'green' | 'red' | 'yellow' | 'orange' | 'purple' | 'gray' };

const colorClasses: Record<'green' | 'red' | 'yellow' | 'orange' | 'purple' | 'gray', string> = {
  green: 'bg-green-100 text-green-800 border-green-400 dark:bg-gray-700 dark:text-green-400',
  red: 'bg-red-100 text-red-800 border-red-400 dark:bg-gray-700 dark:text-red-400',
  yellow: 'bg-yellow-100 text-yellow-800 border-yellow-400 dark:bg-gray-700 dark:text-yellow-400',
  orange: 'bg-orange-100 text-orange-800 border-orange-400 dark:bg-gray-700 dark:text-orange-400',
  purple: 'bg-purple-100 text-purple-800 border-purple-400 dark:bg-gray-700 dark:text-purple-400',
  gray: 'bg-gray-100 text-gray-800 border-gray-400 dark:bg-gray-700 dark:text-gray-400',
};

const badgeClass = colorClasses[color];
---

<span class={`text-xs font-medium me-2 px-2.5 py-0.5 rounded-sm border ${badgeClass}`}>
  <slot />
</span>